<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" thread-count="5">

    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <parameter name="url" value="https://automationexercise.com/"/>
        <classes>
            <class name="com.TestRunner.RegistrationRunner"/>
            <class name="com.TestRunner.LoginRunner"/>
            <class name="com.TestRunner.LogoutRunner"/>
        </classes>
    </test>

    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <parameter name="url" value="https://automationexercise.com/"/>
        <classes>
            <class name="com.TestRunner.RegistrationRunner"/>
            <class name="com.TestRunner.LoginRunner"/>
            <class name="com.TestRunner.LogoutRunner"/>
        </classes>
    </test>

    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <parameter name="url" value="https://automationexercise.com/"/>
        <classes>
           <class name="com.TestRunner.RegistrationRunner"/>
            <class name="com.TestRunner.LoginRunner"/>
            <class name="com.TestRunner.LogoutRunner"/>
        </classes>
    </test>

</suite>
